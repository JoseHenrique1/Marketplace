// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  image    String?
  whatsapp String  @unique
  city     String
  state    String

  products  Product[] 
  interests Interest[]
}

model Product {
  id          String     @id @default(uuid())
  name        String
  price       Decimal
  isAvailable Boolean @default(false)
  image       String 
  description String

  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  interests Interest[]
}

model Interest {
  userId    String
  productId String
  status    InterestStatus @default(PENDING)

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@id([userId, productId]) // Chave prim√°ria composta
}

enum InterestStatus {
  PENDING
  ACCEPTED
  REJECTED
}
